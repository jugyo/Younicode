!!!
%head
  %meta{:charset => "utf-8"}/
  %title= [@char, 'Younicode'].compact.join(' - ')
  %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
  %link{:href => "/css/screen.css?v=1.0", :rel => "stylesheet"}/
  %script{:src => "/js/modernizr-1.6.min.js"}
%body.home
  #header
    %h1
      %a{:href => '/'}
        %span.you>< You
        %span.nicode nicode
      .sub ユーニコード
    %ul.actions
      %li
        %a{:href => '/'} Home
      %li
        %form{:action => '/search'}
          %input{:type => 'search', :name => 'char', :placeholder => '♥'}
      - if current_user
        %li= user_link current_user, :image => :m, :show_name => true
        %li
          %a{:href => "/logout"} logout
      - else
        %li
          %a{:href => "/auth/twitter"} Sign in with Twitter
          (
          %a{:href => "/about/sign_in"} Help
          )

  #main
    #chars-bar
      .nav.left❮
      .nav.right❯
      #chars
      .hint
        ↺ You also can use mouse wheel
      #char-code

    #content
      = yield

    #dashboard

  .clear

  #footer
    created by
    = user_link({:name => 'jugyo'}, {:show_name => true})

  %script{:src => "/js/jquery-1.4.4.min.js"}
  %script{:src => "/js/jquery.mousewheel.js"}
  %script{:src => "/js/general.js"}
  :javascript
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-145539-8']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
